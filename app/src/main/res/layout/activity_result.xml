<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0EEF6"
    tools:context=".Result">

    <TextView
        android:id="@+id/resultView"
        android:layout_width="329dp"
        android:layout_height="103dp"
        android:layout_marginTop="60dp"
        android:fontFamily="cursive"
        android:gravity="center_horizontal|center_vertical"
        android:textAllCaps="true"
        android:textColor="#FF0000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/restartBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/restartBtn"
        android:layout_width="254dp"
        android:layout_height="103dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:background="#87FF00"
        android:fontFamily="sans-serif-black"
        android:onClick="restartQuiz"
        android:text="Retry"
        android:textAllCaps="true"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/exitBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultView" />

    <Button
        android:id="@+id/exitBtn"
        android:layout_width="132dp"
        android:layout_height="73dp"
        android:layout_marginStart="139dp"
        android:layout_marginLeft="139dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="140dp"
        android:layout_marginRight="140dp"
        android:layout_marginBottom="183dp"
        android:background="#FF0000"
        android:fontFamily="sans-serif-black"
        android:text="Exit"
        android:textSize="24sp"
        android:onClick="exitApp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restartBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>